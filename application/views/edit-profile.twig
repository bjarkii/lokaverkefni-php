{% extends "_base.twig" %}

{% block title %}{{ userInfo[0].username }}{% endblock %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block content %}

  <form method="post">
    <div class="profile-header">
      <div class="box-banner" style="background: url({{ currentUserInfo[0].banner_url }});">
      </div>
      <div class="box-wrap pure-g">
        <div class="profile-pic pure-u-1-5">
          <img src="{{ currentUserInfo[0].profile_pic }}" alt="" />
        </div>
        <div class="profile-content pure-u-4-5">
          <div class="pure-g">
            <div class="profile-edit-input pure-u-1-2">
              <label for="user_profile_pic">Change your username</label>
              <input type="text" name="user_profile_pic" value="{{ currentUserInfo[0].username }}">
            </div>
            <div class="profile-edit-input pure-u-1-2">
              <label for="user_profile_pic">Change your description</label>
              <input type="text" name="user_profile_pic" value="{{ currentUserInfo[0].description }}">
            </div>
            <div class="profile-edit-input pure-u-1-3">
              <label for="user_profile_pic">Change website url</label>
              <input type="text" name="user_profile_pic" value="{{ currentUserInfo[0].website }}">
            </div>
            <div class="profile-edit-input pure-u-1-3">
              <label for="user_profile_pic">Change your profile pic</label>
              <input type="text" name="user_profile_pic" value="{{ currentUserInfo[0].profile_pic }}">
            </div>
            <div class="profile-edit-input pure-u-1-3">
              <label for="user_profile_pic">Change your cover picture</label>
              <input type="text" name="user_profile_pic" value="{{ currentUserInfo[0].profile_pic }}">
            </div>
          </div>
        </div>
        <div class="pure-u-1 update-profile-btns">
          <button type="submit" class="btn-color" name="profile-update-action">Update Profile</button>
          <a class="btn-color" href="{{ path }}/user/findUser/{{ currentUserInfo[0].username }}">View current profile</a>
        </div>
      </div>
    </div>
  </form>

{% endblock %}
